<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="gantry_robot">
  <xacro:macro name="gantry_robot">
  
  <material name="grey">
    <color rgba="0.7 0.7 0.7 1.0" />
  </material>

  <!-- link name="world" / -->

  <!-- IPM (Imaginary Point Marker) - 参考点 -->
  <link name="ipm">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.01" />
      </geometry>
      <material name="marker-material">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.01" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
  </link>

  <joint name="world_to_ipm" type="fixed">
    <parent link="world" />
    <child link="ipm" />
    <origin xyz="0.4 -0.2 0.6" rpy="1.57 0 -1.57" />
  </joint>

  <link name="link1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://models/meshes/link1.STL" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="grey" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://models/meshes/link1.STL" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
    </inertial>
  </link>

  <joint name="world_to_link1" type="fixed">
    <parent link="world" />
    <child link="link1" />
    <origin xyz="0 0 0.35" rpy="0 0 0" />
  </joint>

  <link name="link2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
