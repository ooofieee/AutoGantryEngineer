    </inertial>
  </link>

  <joint name="joint_1_2" type="prismatic">
    <parent link="link1" />
    <child link="link2" />
    <origin xyz="0.1 0 0.2" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
    <limit lower="-0.3" upper="0.1" velocity="0.5" effort="1000"/>
  </joint>

